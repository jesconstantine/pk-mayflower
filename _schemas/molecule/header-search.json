{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Header Search",
  "category": "molecule",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the pattern, used to identify pattern files during validation",
      "type": "string",
      "default": "header-search",
      "options": {
        "hidden": true
      }
    },
    "headerSearch": {
      "type": "object",
      "properties": {
        "placeholder": {
          "type": "string",
          "default": "What can we help you find?"
        },
        "id": {
          "type": "string",
          "default": "header-search"
        }
      },
      "required": ["placeholder", "id"],
      "additionalProperties": false
    }
  },
  "required": ["headerSearch"],
  "additionalProperties": false
}
